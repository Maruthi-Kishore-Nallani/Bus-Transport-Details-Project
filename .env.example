# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/bus_transport"

# Security - JWT Secret (REQUIRED - generate a strong random secret for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ADMIN_JWT_SECRET=your-very-secure-jwt-secret-here-change-me

# Main Admin (Superadmin) Credentials
MAIN_ADMIN_EMAIL=admin@example.com
MAIN_ADMIN_PASSWORD=your-secure-password-here

# Google Maps API Configuration
# IMPORTANT: Restrict this key in Google Cloud Console to:
# - Specific HTTP referrers (for client-side use)
# - Specific APIs (Geocoding, Directions, Maps JavaScript)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
GEOCODE_COUNTRY=IN
GEOCODE_REGION=in

# Rate Limiting
AVAILABILITY_RATE_LIMIT_PER_HOUR=200
AVAILABILITY_LIMIT_PER_CONTACT_PER_HOUR=60
LOGIN_MAX_ATTEMPTS=6
LOGIN_WINDOW_MS=900000
GOOGLE_MAPS_DAILY_LIMIT=1000

# Search Configuration
SEARCH_RADIUS_KM=1.5

# CORS Configuration (comma-separated list of allowed origins)
# For production, set to your actual domain(s)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Cookie Security
# Set to 'true' in production (requires HTTPS)
SECURE_COOKIES=false

# Logging
# LOG_LEVEL options: DEBUG, INFO, WARN, ERROR, FATAL
# Use INFO or WARN in production, DEBUG in development
LOG_LEVEL=DEBUG
